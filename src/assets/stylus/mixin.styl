border-1px($color)
  position: relative
  &:after
    content: ' '
    display: inline-block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    height: 0
    border-top: 1px solid $color

border-1px-top($color)
  position: relative
  &:before
    content: ' '
    display: inline-block
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 0
    border-top: 1px solid $color

border-1px-right($color, $height)
  position: relative
  &:after
    content: ' '
    display: inline-block
    position: absolute
    right: 0
    bottom: 50% - $height
    width: 0
    height: $height
    border-right: 1px solid $color

border-none()
  &:after
    display: none
    width: 0
    border: none

border-1px-gradient($direction, $from, $mid, $to)
  position: relative
  &:after
    content: ' '
    display: inline-block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    height: 1px
    background: linear-gradient($direction, $from, $mid, $to, $mid, $from)

active-background()
  &:active
    background-color: rgba(0, 0, 0, 0.1)